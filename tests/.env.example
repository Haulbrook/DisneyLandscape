# Playwright Test Configuration
# Copy this file to .env and fill in your test credentials

# Base URL for tests (defaults to local dev server)
BASE_URL=http://localhost:5173

# Test user credentials - create a dedicated test account
TEST_USER_EMAIL=your-test-user@example.com
TEST_USER_PASSWORD=your-test-password

# Admin user credentials (optional - for admin-specific tests)
TEST_ADMIN_EMAIL=your-admin@example.com
TEST_ADMIN_PASSWORD=your-admin-password

# Stress test configuration
STRESS_CONCURRENT_USERS=10
STRESS_REQUESTS_PER_USER=5
STRESS_MAX_RESPONSE_TIME=5000
